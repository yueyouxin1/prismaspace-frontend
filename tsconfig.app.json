{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "types": ["vite/client"],
    "baseUrl": ".",
    "paths": {
      "@app/*": ["./apps/studio-web/src/*"],
      "@repo/ui-ai-elements": ["./packages/ui-ai-elements/src/index.ts"],
      "@repo/ui-ai-elements/*": ["./packages/ui-ai-elements/src/*"],
      "@repo/ui-shadcn": ["./packages/ui-shadcn/src/index.ts"],
      "@repo/ui-shadcn/*": ["./packages/ui-shadcn/src/*"],
      "@repo/ui-reka": ["./packages/ui-reka/src/index.ts"],
      "@repo/ui-reka/*": ["./packages/ui-reka/src/*"],
      "@repo/editor": ["./packages/editor/src/index.ts"],
      "@repo/editor/*": ["./packages/editor/src/*"],
      "@repo/common": ["./packages/common/src/index.ts"],
      "@repo/common/*": ["./packages/common/src/*"],
      "@repo/generator": ["./packages/generator/src/index.ts"],
      "@repo/generator/*": ["./packages/generator/src/*"],
      "@repo/workflow": ["./packages/workflow/src/index.ts"],
      "@repo/workflow/*": ["./packages/workflow/*"],
      "@repo/workbench-core": ["./packages/workbench-core/src/index.ts"],
      "@repo/workbench-core/*": ["./packages/workbench-core/src/*"],
      "@repo/workbench-uiapp": ["./packages/workbench-uiapp/src/index.ts"],
      "@repo/workbench-uiapp/*": ["./packages/workbench-uiapp/src/*"],
      "@repo/workbench-agent": ["./packages/workbench-agent/src/index.ts"],
      "@repo/workbench-agent/*": ["./packages/workbench-agent/src/*"],
      "@repo/workbench-workflow": ["./packages/workbench-workflow/src/index.ts"],
      "@repo/workbench-workflow/*": ["./packages/workbench-workflow/src/*"],
      "@repo/workbench-knowledge": ["./packages/workbench-knowledge/src/index.ts"],
      "@repo/workbench-knowledge/*": ["./packages/workbench-knowledge/src/*"],
      "@repo/workbench-tenantdb": ["./packages/workbench-tenantdb/src/index.ts"],
      "@repo/workbench-tenantdb/*": ["./packages/workbench-tenantdb/src/*"],
      "@repo/workbench-tool": ["./packages/workbench-tool/src/index.ts"],
      "@repo/workbench-tool/*": ["./packages/workbench-tool/src/*"],
      "@repo/asset-hub": ["./packages/asset-hub/src/index.ts"],
      "@repo/asset-hub/*": ["./packages/asset-hub/src/*"]
    },

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "erasableSyntaxOnly": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true
  },
  "include": [
    "apps/studio-web/src/**/*.ts",
    "apps/studio-web/src/**/*.tsx",
    "apps/studio-web/src/**/*.vue",
    "packages/ui-ai-elements/src/**/*.ts",
    "packages/ui-ai-elements/src/**/*.vue",
    "packages/ui-shadcn/src/**/*.ts",
    "packages/ui-shadcn/src/**/*.vue",
    "packages/ui-reka/src/**/*.ts",
    "packages/editor/src/**/*.ts",
    "packages/editor/src/**/*.vue",
    "packages/generator/src/**/*.ts",
    "packages/generator/src/**/*.vue",
    "packages/common/src/**/*.ts",
    "packages/common/src/**/*.vue",
    "packages/workbench-core/src/**/*.ts",
    "packages/workbench-core/src/**/*.vue",
    "packages/workbench-uiapp/src/**/*.ts",
    "packages/workbench-uiapp/src/**/*.vue",
    "packages/workbench-agent/src/**/*.ts",
    "packages/workbench-agent/src/**/*.vue",
    "packages/workbench-workflow/src/**/*.ts",
    "packages/workbench-workflow/src/**/*.vue",
    "packages/workbench-knowledge/src/**/*.ts",
    "packages/workbench-knowledge/src/**/*.vue",
    "packages/workbench-tenantdb/src/**/*.ts",
    "packages/workbench-tenantdb/src/**/*.vue",
    "packages/workbench-tool/src/**/*.ts",
    "packages/workbench-tool/src/**/*.vue",
    "packages/asset-hub/src/**/*.ts",
    "packages/asset-hub/src/**/*.vue",
    "packages/workflow/src/**/*.ts",
    "packages/workflow/src/**/*.vue",
    "packages/workflow/playground/src/**/*.ts",
    "packages/workflow/playground/src/**/*.vue"
  ]
}
